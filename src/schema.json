{
    "$id": "src/categories/schema.json",
    "category":{
        "type": "object",
        "properties": {
            "id": { "type": "string"},
            "name": { "type": "string" }
        },
        "required": ["name"]
    },
    "categories": {
        "type": "array",
        "items": { "$ref": "#/category" },
        "uniqueItems": true
    },
    "insertCategory": {
        "allOf" : [
            { "$ref": "#/category" },
            {
                "required": ["name"]
            }
        ]
    },
    "editCategory": {
        "allOf" : [
            { "$ref": "#/category" },
            {
                "required": ["id", "name"]
            }
        ]
    },
    "responseCategories": {
        "allOf" : [
            { "$ref": "../utils/schema.json#/response" },
            {
                "properties": {
                    "data": { "$ref": "#/categories" }
                }
            }
        ]
    },
    "responseCategory": {
        "allOf" : [
            { "$ref": "../utils/schema.json#/response" },
            {
                "properties": {
                    "data": { "$ref": "#/category" }
                }
            }
        ]

    }
}