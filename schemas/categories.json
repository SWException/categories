{
    "$id": "schemas/categories.json",
    "category":{
        "type": "object",
        "properties": {
            "id": { "type": "string"},
            "categoryName": { "type": "string" }
        },
        "required": ["categoryName"]
    },
    "categories": {
        "type": "array",
        "items": { "$ref": "#/category" },
        "uniqueItems": true
    },
    "insertCategory": {
        "allOf" : [
            { "$ref": "#/category" },
            {
                "required": ["categoryName"]
            }
        ]
    },
    "editCategory": {
        "allOf" : [
            { "$ref": "#/category" },
            {
                "required": ["id", "categoryName"]
            }
        ]
    },
    "responseCategories": {
        "allOf" : [
            { "$ref": "response.json#/response" },
            {
                "properties": {
                    "data": { "$ref": "#/categories" }
                }
            }
        ]
    },
    "responseCategory": {
        "allOf" : [
            { "$ref": "response.json#/response" },
            {
                "properties": {
                    "data": { "$ref": "#/category" }
                }
            }
        ]
    }
}